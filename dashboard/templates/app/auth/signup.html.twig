{% extends 'auth.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4 mx-4">
                <div class="card-body p-4">
                    {% include '_flashes.html.twig' %}

                    <h1>Sign Up</h1>
                    <p class="text-medium-emphasis">Create your account</p>

                    {{ form_start(form) }}

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="cil-user"></i></span>
                        {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="input-group mb-3"><span class="input-group-text"><i class="cil-lock-locked"></i></span>
                        {{ form_widget(form.password, {'attr': {'placeholder': 'Password'}}) }}
                        {{ form_errors(form.password) }}
                    </div>
                    <button class="btn btn-block btn-primary" type="submit">Create Account</button>

                    {{ form_end(form) }}
                </div>
                <div class="card-footer p-4">
                    <div class="row">
                        <div class="col-6">
                            <a class="btn btn-block btn-primary cib-github" href="{{ path('oauth.github') }}">
                                <span>GitHub</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
